 <h2 class="naslov"> Prijava </h2> <br>
<div class="col-md-4 col-md-offset-4">
  <div class="registracija-forma">

                  <div class="depot_form">
                  <% if flash[:alert] %>
                  <p id="notice"><%= flash[:alert] %></p>
                  <% end %>
                  </div>

          <%= form_tag(sessions_path) do %>


                                <% if !flash[:error].nil? %>

                                <div class="alert alert-danger">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Greska!</strong> <%= flash[:error] %>
                                </div>

                                <% end %>

                      <div class="form-group">
                      <%= label :username,"Korisnicko ime:"%><br/>
                      <%= text_field_tag :username,"", class:"form-control" %><br/>
                      </div>


                      <div class="form-group">
                        <%= label :password,"Korisnicka sifra:" %><br/>
                        <%= text_field_tag :password,"",class:"form-control" %><br/>
                      </div>


                      <p>
                        <input type="submit" class="btn btn-default" id="dugme-prijava" value="Prijavi se">
                        
                      </p>

          <% end %>

  </div>
</div>




