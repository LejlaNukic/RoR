<%= form_for :info, url: carts_pay_path do |f| %>
<div class="info-form">
<div class="form-group">
  <%= f.label :name, "Ime" %>
  <%= f.text_field :name, class: "form-control", value: @name %>
</div>

<div class="form-group">
  <%= f.label :surname, "Prezime"%>
  <%= f.text_field :surname, class: "form-control", value: @surname  %>
</div>

<div class="form-group">
  <%= f.label :address, "Adresa" %>
  <%= f.text_field :address, class: "form-control", value: @address %>
</div>

<div class="form-group">
  <%= f.label :city, "Grad" %>
  <%= f.text_field :city, class: "form-control", value: @city %>
</div>

<div class="form-group">
  <%= f.label :country, "Drzava" %>
  <%= f.text_field :country, class: "form-control", value: @country %>
</div>
<%= f.submit "Potvrdi",class:"btn btn-primary" %>
</div>
<% end %>