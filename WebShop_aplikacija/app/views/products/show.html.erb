<div class="row">
	<div class="col-lg-12">
        <h1 class="page-header">Naziv proizvoda:
            <small><%=@product.name%></small>
        </h1>
</div>
</div>

 <div class="col-md-6">
        <img class="img-responsive" src="<%=@product.image_url%>" alt="">
</div>

